{% extends 'user-base.html.twig' %}

{% block title %}Book Details | E-Library{% endblock %}

{% block body %}
{% include 'home/header.html.twig' %}
{% include 'home/search_area.html.twig' %}
<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
		            	<p>See more Details</p>
						<h1>Book Details</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->
    <!-- single product -->
	<div class="single-product mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-md-5">
					<div class="single-product-img">
						<img src="/images/livres/{{ livre.filename }}" alt="">
					</div>
				</div>
				<div class="col-md-7">
					<div class="single-product-content">
						<h3>{{ livre.titre }}</h3>
						<p class="single-product-pricing"><span> <strong> Description :</strong></span></p>
						<p>{{ livre.description }}</p>
						<div class="single-product-form">
                        <p><strong>Categories: </strong>{{ livre.categorie.designation }}</p>
                        <p><strong>Author: </strong>{{ livre.auteur[0].prenom }} {{ livre.auteur[0].nom }}</p>
                        <p><strong>Editor: </strong>{{ livre.editeur.nomEditeur }}</p>
							<form action="index.html">
								<input type="number" placeholder="0">
							</form>
							<a href="{{path('cart_add',{id: livre.id})}}" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
							
						</div>
						<h4>Share:</h4>
						<ul class="product-share">
							<li><a href=""><i class="fab fa-facebook-f"></i></a></li>
							<li><a href=""><i class="fab fa-twitter"></i></a></li>
							<li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
							<li><a href=""><i class="fab fa-linkedin"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end single product -->


<!-- logo carousel -->
		{% include 'home/sponsors_logo.html.twig' %}
	<!-- end logo carousel -->



  {% include 'home/footer.html.twig' %}
  {% include 'home/copyrights.html.twig' %}
{% endblock %}
