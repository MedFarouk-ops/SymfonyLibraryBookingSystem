{% extends 'admin-base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}

    <!-- Start wrapper-->
    <div id="wrapper">
    
        {% include 'admin/sidebar.html.twig' %}
        {% include 'admin/header.html.twig' %}
        <div class="clearfix"></div>	
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="col-lg-16">
                    <div class="card">
                       <div class="card-body">
                        <div class="card-title">Tables de categories :</div>
        <!-- <h1>Table des categories :</h1> -->

        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>Id</th>
                    <th>Designation</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.designation }}</td>
                    <td>{{ categorie.description }}</td>
                    <td>
                        <a href="{{ path('categorie_show', {'id': categorie.id}) }}" class="btn btn-light">show</a>
                        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-dark">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>

        <a href="{{ path('categorie_new') }}" class="btn btn-light btn-block">Create new</a>
        </div>
        </div>
        </div>
        </div></div></div>
    {% endblock %}
